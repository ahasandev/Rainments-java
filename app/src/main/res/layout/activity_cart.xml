<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitis.CartActivity"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bttomlay"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/bttomlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="#F3E7E7"
                android:padding="10dp"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:text="Your Total Amount : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/totalamount"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="#F3E7E7"
                android:paddingVertical="10sp"
                android:paddingHorizontal="20sp"
                android:gravity="end"
                android:includeFontPadding="false"
                android:text="1999.00"
                android:textColor="#1B9505"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/placeorders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#FFBB33"
            />

    </LinearLayout>


</RelativeLayout>